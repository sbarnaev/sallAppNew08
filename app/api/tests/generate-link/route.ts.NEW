import { cookies } from "next/headers";
import { NextRequest, NextResponse } from "next/server";
import { getDirectusUrl } from "@/lib/env";
import { checkSubscriptionInAPI } from "@/lib/subscription-check";
import { logger } from "@/lib/logger";
import { randomUUID } from "crypto";
import { TESTS, TestId } from "@/lib/test-types";

export async function POST(req: NextRequest) {
  // Проверяем подписку
  const subscriptionCheck = await checkSubscriptionInAPI();
  if (subscriptionCheck) {
    return subscriptionCheck;
  }

  const token = cookies().get("directus_access_token")?.value;
  const baseUrl = getDirectusUrl();
  if (!token || !baseUrl) {
    return NextResponse.json({ message: "Unauthorized or no DIRECTUS_URL" }, { status: 401 });
  }

  try {
    const body = await req.json();
    const { clientId, testId, requestBirthDate } = body; // НОВОЕ: requestBirthDate

    if (!clientId || !testId) {
      return NextResponse.json({ message: "clientId and testId are required" }, { status: 400 });
    }

    // Валидация testId
    if (!TESTS[testId as TestId]) {
      return NextResponse.json({ message: "Invalid testId" }, { status: 400 });
    }

    // Валидация clientId
    const clientIdNum = Number(clientId);
    if (isNaN(clientIdNum) || clientIdNum <= 0) {
      return NextResponse.json({ message: "Invalid clientId" }, { status: 400 });
    }

    // Проверяем, что клиент существует и принадлежит текущему пользователю
    const clientRes = await fetch(`${baseUrl}/items/clients/${clientIdNum}?fields=id,name,owner_user`, {
      headers: { Authorization: `Bearer ${token}`, Accept: "application/json" },
      cache: "no-store"
    });

    if (!clientRes.ok) {
      return NextResponse.json({ message: "Client not found" }, { status: 404 });
    }

    // Генерируем уникальный токен
    const testToken = randomUUID();

    // Создаем запись в test_tokens
    const tokenData: any = {
      token: testToken,
      client_id: clientIdNum,
      test_id: testId,
      used: false
    };

    // НОВОЕ: Добавляем request_birth_date если указано
    if (typeof requestBirthDate === 'boolean') {
      tokenData.request_birth_date = requestBirthDate;
    }

    logger.debug("Creating test token:", { tokenData, clientIdNum, testId, requestBirthDate });

    const tokenRes = await fetch(`${baseUrl}/items/test_tokens`, {
      method: "POST",
      headers: {
        Authorization: `Bearer ${token}`,
        "Content-Type": "application/json",
        Accept: "application/json"
      },
      body: JSON.stringify(tokenData)
    });

    if (!tokenRes.ok) {
      const error = await tokenRes.json().catch(() => ({}));
      logger.error("Failed to create test token:", { error, tokenData, status: tokenRes.status });
      return NextResponse.json({ message: "Failed to create test token", error }, { status: tokenRes.status });
    }

    // Формируем публичную ссылку
    const appBaseUrl = process.env.NEXT_PUBLIC_APP_URL;
    let testLink: string;
    
    if (appBaseUrl) {
      testLink = `${appBaseUrl.replace(/\/+$/, "")}/test/${testToken}`;
    } else {
      const url = new URL(req.url);
      const protocol = req.headers.get("x-forwarded-proto") || url.protocol.replace(":", "");
      const host = req.headers.get("host") || url.host;
      testLink = `${protocol}://${host}/test/${testToken}`;
    }

    return NextResponse.json({ 
      success: true, 
      token: testToken,
      link: testLink 
    });
  } catch (error) {
    logger.error("Error generating test link:", error);
    return NextResponse.json(
      { message: "Error generating test link", error: String(error) },
      { status: 500 }
    );
  }
}
